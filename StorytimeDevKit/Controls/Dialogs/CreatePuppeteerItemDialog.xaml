<Window x:Class="StoryTimeDevKit.Controls.Dialogs.CreatePuppeteerItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create" Height="300" Width="300">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,39,0,0" Name="SceneNameTextBlock" Text="Name:" VerticalAlignment="Top" />
        <TextBox Height="22" 
                 HorizontalAlignment="Left" 
                 Margin="61,40,0,0" 
                 Name="SkeletonNameTextBox" 
                 VerticalAlignment="Top" 
                 Width="205" 
                 Text="{Binding Path=FileNameWithoutExtension, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Confirm" Height="23" HorizontalAlignment="Left" Margin="110,226,0,0" Name="ConfirmButton" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="191,226,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" Click="CancelButton_Click" />
    </Grid>
</Window>
